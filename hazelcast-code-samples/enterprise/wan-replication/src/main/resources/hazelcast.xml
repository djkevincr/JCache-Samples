<hazelcast xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.hazelcast.com/schema/config
                               http://www.hazelcast.com/schema/config/hazelcast-config-3.6.xsd"
           xmlns="http://www.hazelcast.com/schema/config">

    <group>
        <name>clusterA</name>
        <password>clusterA-pass</password>
    </group>
    <license-key>YOUR_LICENSE_KEY</license-key>

    <network>
        <port>5701</port>
        <join>
            <multicast enabled="false"/>
            <tcp-ip enabled="true">
                <member>127.0.0.1:5701</member>
            </tcp-ip>
        </join>
    </network>

    <wan-replication name="AtoB">
        <target-cluster group-name="clusterB" group-password="clusterB-pass">
            <replication-impl>com.hazelcast.enterprise.wan.replication.WanNoDelayReplication</replication-impl>
            <end-points>
                <address>127.0.0.1:5702</address>
            </end-points>
            <!-- Acknowledge type is optional, defaults to ACK_ON_OPERATION_COMPLETE  -->
            <acknowledge-type>ACK_ON_OPERATION_COMPLETE</acknowledge-type>
            <!-- <acknowledge-type>ACK_ON_TRANSMIT</acknowledge-type> -->
        </target-cluster>
    </wan-replication>
    <map name="default">
        <wan-replication-ref name="AtoB">
            <merge-policy>com.hazelcast.map.merge.PassThroughMergePolicy</merge-policy>
            <!-- Filters are optional -->
            <filters>
                <filter-impl>com.hazelcast.map.wanreplication.filter.SampleMapWanEventFilter</filter-impl>
            </filters>
        </wan-replication-ref>
    </map>
</hazelcast>
